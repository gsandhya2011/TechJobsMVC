<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @if(ViewBag.jobs.Count == 0)
    {
        //TODO #1: Use a loop to display job results in a table.
        <p>No events Yet!</p>
    }
    else
    {
       @foreach(var job in ViewBag.jobs)
       {
           <table class="table">
               <tr>
                   <td>ID</td>
                   <td>@job.Id</td>
               </tr>

               <tr>
                   <td>Name</td>
                   <td>@job.Name</td>
               </tr>
               <tr>
                   <td>Employer</td>
                   <td>@job.Employer</td>
               </tr>
               <tr>
                   <td>Location</td>
                   <td>@job.Location</td>
               </tr>
               <tr>
                   <td>Position Type</td>
                   <td>@job.PositionType</td>
               </tr>
               <tr>
                   <td>Core Competency</td>
                   <td>@job.CoreCompetency</td>
               </tr>
           </table>

       }         

    }

</div>